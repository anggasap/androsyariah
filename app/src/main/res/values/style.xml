<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="MyStyle.dialog">
		<item name="android:padding">5dp</item>
    </style>

    <style name="MyListIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>    
  
    <style name="MyStyle.list_menu">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>    
   </style>

   <style name="MyStyle.list_menu.no_icon">
        <item name="android:paddingLeft">15dp</item>   
   </style>
   
   <style name="MyStyle.list_menu.with_icon">
        <item name="android:paddingLeft">5dp</item>   
   </style>
             
    
    <style name="MyStyle.input">
    	<item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>     

    <style name="MyStyle.label">
    	<item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18sp</item>
    </style> 
    
    <style name="MyStyle.list_menu_label">
    	<item name="android:paddingTop">22dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>      
    
    <style name="MyStyle.list_menu_label_amount">
    	<item name="android:paddingTop">22dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
    </style> 
</resources>